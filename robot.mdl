ambient 255 0 255
light l1 255 0 255 1 1 1
constants white 0.25 0.5 0.25 0.25 0.5 0.25 0.25 0.5 0.25

frames 100
basename robot
//BODY
push
    move 250 250 0
    rotate y 360 spin
    box white -100 125 50 200 250 100
    //HEAD
    push
        move 0 175 0
        rotate y 90
        sphere white 0 0 0 50
    pop
    //LEFT ARM
    push
        move -100 125 0
        rotate x -45
        box white -40 0 40 40 100 80
        //LEFT LOWER ARM
        push
            move -20 -100 0
            box white -10 0 10 20 125 20
        pop
    pop
    //RIGHT ARM
    push
        move 100 125 0
        rotate x -45
        box white 0 0 40 40 100 80
        //RIGHT LOWER ARM
        push
            move 20 -100 0
            rotate x -20
            box white -10 0 10 20 125 20
        pop
    pop
    //LEFT LEG
    push
        move -100 -125 0
        box white 0 0 40 50 120 80
    pop
    //RIGHT LEG
    push
        move 100 -125 0
        box white -50 0 40 50 120 80
    pop
pop
vary spin 0 99 0 1
